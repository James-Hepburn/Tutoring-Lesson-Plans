import os
import time

class Zoo:

  def __init__ (self):
    self.animals = []

  def add_animal (self, animal):
    self.animals.append (animal)

  def show_animals (self):
    print ("\nHere are all the animals:")
    for i in self.animals:
      i.show ()

class Lion:

  def __init__ (self, name, habitat):
    self.name = name
    self.habitat = habitat

  def show (self):
    print (self.name, "the lion is from the", self.habitat + ".")

class Giraffe:

  def __init__ (self, name, height):
    self.name = name
    self.height = height
  
  def show (self):
    print (self.name, "the giraffe is", self.height, "metres tall.")

class Elephant:

  def __init__ (self, name, weight):
    self.name = name
    self.weight = weight

  def show (self):
    print (self.name, "the elephant weighs", self.weight, "pounds.")

zoo = Zoo ()

while True:
  time.sleep (2)
  os.system ("clear")
  print ("Select an option:\n")
  print ("1) Add a zoo animal")
  print ("2) View all zoo animals")
  print ("3) Exit program")
  option = int (input("\nYour selection: "))

  if option == 1:
    animal = int (input ("\nWould you like to add a (1) Lion, (2) Giraffe or (3) Elephant? "))
    
    if animal == 1:
      name = input ("\nWhat is the Lion's name? ")
      habitat = input ("What is the Lion's habitat? ")
      lion = Lion (name, habitat)
      zoo.add_animal (lion)
      
    elif animal == 2:
      name = input ("\nWhat is the Giraffe's name? ")
      height = input ("What is the Giraffe's height (in m)? ")
      giraffe = Giraffe (name, height)
      zoo.add_animal (giraffe)
      
    elif animal == 3:
      name = input ("\nWhat is the Elephant's name? ")
      weight = input ("What is the Elephant's weight (in lbs)? ")
      elephant = Elephant (name, weight)
      zoo.add_animal (elephant)
      
    else:
      print ("\nInvalid animal selection.")

  elif option == 2:
    zoo.show_animals ()
    time.sleep (3)

  elif option == 3:
    print ("\nGoodbye.")
    break

  else:
    print ("\nInvalid option selection.")
    
